@using PustokProject.CoreModels
@using PustokProject.ViewModels
@model VM_PaginatedEntityTable<Author>

<div>
    <ul id="pagination" class="pagination">
        <li class='page-item @(Model.HasPrev ? "" : "disabled" )'>
            <a class="page-link" href="@Model.PreviousPage" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            @if (i == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="@Url.Action("PaginatedAuthors",new {pagenumber = i,take=3})">@i <span class="sr-only">(current)</span></a>
                </li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("PaginatedAuthors",new {pagenumber = i,take=3})">@i</a></li>
            }
        }
        <li class="page-item @(Model.HasNext ? "" : "disabled" )">
            <a class="page-link" href="@Model.NextPage">Next</a>
        </li>
    </ul>
</div>
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Author author in Model.Items)
        {
            <tr style="color:@(author.IsDeleted ? "white" : "black"); background-color:@(author.IsDeleted ? "red" :  string.Empty)" colspan="2">
                <td>@author.Id</td>
                <th> @author.Name </th>
                <th> @author.Surname </th>
                <td><a style="display:@(author.IsDeleted ? "none" : string.Empty);)" asp-area="Admin" asp-controller="BookAuthors" asp-action="DeleteAuthor" asp-route-authorId="@author.Id" class="btn btn-danger">Delete</a></td>
                <td><a style="display:@(author.IsDeleted ? String.Empty : "none");)" asp-area="Admin" asp-controller="BookAuthors" asp-action="RevokeDeleteAuthor" asp-route-authorId="@author.Id" class="btn btn-primary">Revoke</a></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul id="pagination" class="pagination">
        <li class='page-item @(Model.HasPrev ? "" : "disabled" )'>
            <a class="page-link" href="@Model.PreviousPage" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            @if (i == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="@Url.Action("PaginatedAuthors",new {pagenumber = i,take=3})">@i <span class="sr-only">(current)</span></a>
                </li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="@Url.Action("PaginatedAuthors",new {pagenumber = i,take=3})">@i</a></li>
            }
        }
        <li class="page-item @(Model.HasNext ? "" : "disabled" )">
            <a class="page-link" href="@Model.NextPage">Next</a>
        </li>
    </ul>
</div>