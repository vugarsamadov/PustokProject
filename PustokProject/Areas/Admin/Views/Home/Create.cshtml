@using PustokProject.ViewModels.Sliders;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model VM_CreateSlider


<form class="flex card-body align-items-center" method="post" asp-action="Create">
    
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <span asp-validation-for="Description" class="text-danger"></span>
        <label asp-for="Description"  class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>

    <div class="form-group">
        <span asp-validation-for="ButtonText" class="text-danger"></span>
        <label asp-for="ButtonText" class="form-label">Button Text</label>
        <input type="text" class="form-control" asp-for="ButtonText">
    </div>
    
    <div class="form-group">
        <span asp-validation-for="ThumpnailUrl" class="text-danger"></span>
        <label asp-for="ThumpnailUrl" class="form-label">Thumbnail Url</label>
        <input type="text" class="form-control" asp-for="ThumpnailUrl">
    </div>
    
    <div class="form-group">
        <span asp-validation-for="TextPosition" class="text-danger"></span>
        <select type="text" class="form-control" asp-for="TextPosition">
            <option value="0">Left</option>
            <option value="1">Rigth</option>
            <option value="2">Middle</option>
        </select>
        <label asp-for="TextPosition" class="form-label">TextPosition</label>
    </div>
    
    


    <button  type="submit" class="btn btn-warning">Submit</button>

</form>
