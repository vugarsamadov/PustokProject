@using PustokProject.CoreModels
@using PustokProject.ViewModels.Books;
@using PustokProject.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model VM_PaginatedEntityTable<Book>;
@section scripts
{
    <script type="text/javascript">

        $("#table-responsive").on("click", "#pagination a", function (ev) {
            ev.preventDefault();
            let url = $(this).attr('href');
            fetch(url).then(a => a.text()).then(a => $("#table-responsive").html(a));
        });
    </script>
}

<div class="container-fluid">
    <a asp-action="CreateBook" class="btn btn-success">Create</a>

    <div class="card-body">
        <div id="table-responsive" class="table-responsive">
            <partial name="_PaginatedColumnsBooks" model="Model" />
        </div>
    </div>

</div>