@using PustokProject.CoreModels;
@using PustokProject.ViewModels.Books.Non_Admin;
@model PagedBooksVm<IEnumerable<Book>>

<div id="discountedbookscontainer"  class="flex-column flex align-items-center">

    <div  class="discountedbookscontainer d-flex flex-wrap flex-row justify-content-center">
@foreach (var book in Model.Items)
{
        <div class="product-card px-5">
            <div class="product-header">
                <a href="#" class="author">
                    Author
                </a>
                <h3>
                    <a href="product-details.html">
                        @book.Name
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img width="300" height="300" src="~/bookimages/@book.CoverImageUrl" alt="">
                    <div class="hover-contents">
                        <a asp-action="Index" asp-controller="BookDetails" asp-route-Id="@book.Id" class="hover-image">
                            <img src="~/bookimages/@book.BackImageUrl" alt="">
                        </a>
                        <div class="hover-btns">
                            <a href="#" data-toggle="modal" data-target="#quickModal"
                               class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    <span class="price">$@book.DiscountedPrice</span>
                    @if (!(book.DiscountPercentage is null or 0))
                    {
                        <del class="price-old">$@book.Price</del>
                        <span class="price-discount">@book.DiscountPercentage %</span>
                    }
                </div>
            </div>
        </div>
    }
    </div>
</div>

